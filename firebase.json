{
  "hosting": [
    {
      "site": "ihike-pakistan-app",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "site": "ihike-pak",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "appAssociation": "AUTO",
      "rewrites": [
        { "source": "/hikes/**", "dynamicLinks": true },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
